{
  "manifest_version": 3,
  "name": "popupscreenshot",
  "description": "コピーしたものを基にテンプレートを使用して簡単に備忘録を作成してくれます",
  "version": "3.0.1",



  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "tabs",
    "storage"
  ],

  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "64": "/images/64.jpg",
      "128": "/images/128.jpg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
"content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["content.js"]
  }],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "Run extension."
    },
    "clearList": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Clear List."
    },
    "copyText": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Copy: Add List."
    },
    "showList": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Show List."
    }
  },

  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "64": "/images/64.jpg",
    "128": "/images/128.jpg"
  }
}